<form action="/contacts" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Ваш e-mail</label>
    <input name="contact[email]" type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" value="<%= @c.email %>">
  </div>

  <div class="form-group">
  	<label>Сообщение</label>
    <textarea name="contact[message]" class="form-control" rows="3" placeholder="Text"><%= @c.message %></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Отправить</button>
</form>